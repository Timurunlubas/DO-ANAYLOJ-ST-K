            <script src="https://cdn.emailjs.com/dist/email.min.js"></script>
            <script>
                // EmailJS başlatma
                (function () {
                    emailjs.init("YOUR_EMAILJS_USER_ID"); // EmailJS kullanıcı kimliği
                })();
        
                /**
                 * Formu gösterme fonksiyonu
                 */
                function showForm() {
                    document.getElementById("careerForm").style.display = "block";
                }
        
                /**
                 * Form gönderim işlemi ve e-posta gönderme
                 * @param {Event} event - Form submit olayı
                 */
                function sendEmail(event) {
                    event.preventDefault(); // Varsayılan form gönderimini engelle
        
                    const formData = new FormData(document.getElementById("cvForm"));
        
                    // EmailJS ile e-posta gönderme
                    emailjs.send("YOUR_SERVICE_ID", "YOUR_TEMPLATE_ID", {
                        name: formData.get("name"),
                        email: formData.get("email"),
                        message: "CV dosyası ektedir.",
                    })
                    .then(() => {
                        alert("E-posta başarıyla gönderildi!");
                        window.location.href = "thank-you.html"; // Teşekkür sayfasına yönlendirme
                    })
                    .catch((error) => {
                        console.error("Hata:", error);
                        alert("Bir hata oluştu. Lütfen tekrar deneyin.");
                    });
                }
            </script>
