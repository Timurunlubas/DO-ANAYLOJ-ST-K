<script>
    let currentIndex = 0;
    const images = document.querySelectorAll('.gallery-image');

    function changeImage(direction) {
        // Şu anki aktif resmin 'active' sınıfını kaldır
        images[currentIndex].classList.remove('active');
        
        // Yeni index hesapla
        currentIndex += direction;

        // Döngüsel geçiş için sınırları kontrol et
        if (currentIndex < 0) {
            currentIndex = images.length - 1; // Son görsele git
        } else if (currentIndex >= images.length) {
            currentIndex = 0; // İlk görsele git
        }

        // Yeni aktif görseli göster
        images[currentIndex].classList.add('active');
    }
</script>

</body>










